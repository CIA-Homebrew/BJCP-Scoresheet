{
  "name": "bjcp-scoresheet",
  "version": "0.1.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/CIA-Homebrew/BJCP-Scoresheet.git"
  },
  "license": "GPL-3.0",
  "scripts": {
    "heroku-postbuild": "sequelize db:migrate && npm install",
    "start": "npx sequelize db:migrate && node ./bin/www",
    "debug": "nodemon --inspect ./bin/www",
    "migrate:dev": "npx sequelize-cli db:migrate",
    "migrate:staging": "npx sequelize-cli db:migrate --url postgres://user:password@localhost:5432/bjcp-scoresheet",
    "migrate": "npm run migrage:dev && npm run migrate:staging",
    "seed": "npx sequelize-cli db:seed",
    "staging": "NODE_ENV=staging && npm start"
  },
  "dependencies": {
    "archiver": "^5.0.2",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.5.0",
    "connect-flash": "^0.1.1",
    "connect-session-sequelize": "^7.1.0",
    "cookie-parser": "^1.4.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-messages": "^1.0.1",
    "express-session": "^1.17.1",
    "http-errors": "^1.8.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.6.1",
    "passport": "^0.6.0",
    "passport-custom": "^1.1.1",
    "path": "^0.12.7",
    "pg": "^8.4.0",
    "pug": "^3.0.1",
    "puppeteer": "^5.3.0",
    "sequelize": "^6.29.0",
    "sequelize-cli": "^6.2.0",
    "sequelize-pg-utilities": "^1.5.0",
    "sharp": "^0.31.2",
    "stylus": "^0.54.8",
    "tmp": "^0.2.1",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.10.1",
    "dotenv": "^8.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "sqlite3": "^5.1.4"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,pug}": "prettier --write"
  }
}
