          //-   style="height: 8px; width: 8px; margin-left: 8px;"
          //- ) #{scoresheet.bottle_inspection_check ? 'X' : ' '}
          span.text_bold.display_iblock(
            style="margin-right: 8px;margin-left:8px;width: 200px;"
          ) #{scoresheet.appearance_head_other == 0 ? "Still" : scoresheet.appearance_head_other == 2 ? "Sparkling" : "Petillant"}
