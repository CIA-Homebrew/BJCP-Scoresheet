  script.
    // get each element that needs to be resized
    let resizeThese = document.getElementsByClassName("text_resize_marker");
    Array.prototype.forEach.call(resizeThese, function (ele) {
    	calcTextWidth(ele);
    	calcTextSize(ele);
    });

    function calcTextWidth(ele) {
    	const parentContainerWidth = ele.parentNode.clientWidth;

    	const currentTextWidth = ele.scrollWidth;
    	const currentFontStretch = parseInt(window.getComputedStyle(ele).fontStretch);
    	const newValue = Math.min(Math.max(250, (parentContainerWidth / currentTextWidth) * currentFontStretch), 500)

    	ele.style.setProperty('--fontStretch', newValue + '%');
    }

    function calcTextSize(ele) {
    	const parentContainerWidth = ele.parentNode.clientWidth;
    	const currentTextWidth = ele.scrollWidth;
    	const currentFontSize = parseInt(window.getComputedStyle(ele).fontSize);
    	const newValue = Math.min(Math.max(ele.dataset.minTextSize ? ele.dataset.minTextSize : 14, (parentContainerWidth / currentTextWidth) * currentFontSize), 500)

    	ele.style.setProperty('--fontSize', newValue + 'px');
    }
